  width:750rpx;
  height:750rpx;
}

.canvas-bg{
  margin-top:40rpx;
}

.canvas-draw{
	position:absolute;
	left:0;
	top:76rpx;
}

/*颜色选择*/
.radio-group{display:flex;padding:30rpx 0;}
.radio{flex:1;text-align:center;}