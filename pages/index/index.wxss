/*导航*/
.nav{
	display:block;
	height:36px;
	line-height:36px;
	text-align:center;
	background:#ddd;
	color:#333;
	display:flex;
}

.nav .nav-item{
	flex:1;
}

.nav .current{
	background:#cc0001;
	color:#fff;
}

